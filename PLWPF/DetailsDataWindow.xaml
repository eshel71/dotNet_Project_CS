<Window x:Class="PLWPF.DetailsDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="DetailsDataWindow" Height="367.2" Width="720">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="237*"/>
        </Grid.RowDefinitions>
        <Grid >
            <TextBlock Name="title" Style="{StaticResource titleStyle}" />
        </Grid>
        <Grid Grid.Row="1" Margin="0,10.4,-0.6,0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="208*"/>
                <RowDefinition Height="29*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1">
                <Button FontSize= "20" Content="Back" Click="Click_back" />
            </Grid>
            <Grid />
            <DataGrid IsReadOnly="True" Name="myDataGrid"   />
        </Grid>

    </Grid>
</Window>
