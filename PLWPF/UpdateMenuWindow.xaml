<Window x:Class="PLWPF.UpdateMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="UpdateDataWindow" Height="356.593" Width="363.736">
    <Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid  Grid.Row="1">
                <Button Content="Update Nanny" Margin="10,10,9.6,10.2" FontSize="25" Click="Click_nanny" RenderTransformOrigin="0.501,0.5"/>
            </Grid>
            <Grid  Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="Update Child" Margin="10,10,9.6,10.2" FontSize="25" Click="Click_child"/>
            </Grid>
            <Grid  Grid.Row="3">
                <Button Content="Update Mother" Margin="10,10,9.6,10.2" FontSize="25" Click="Click_mother"/>
            </Grid>
            <Grid  Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="Update Contract" Margin="10,10,9.6,10.2" FontSize="25" Click="Click_contract" />
            </Grid>
            <Grid >
                <TextBlock Text="Update Options" Style="{StaticResource titleStyle}"  />
            </Grid>

        </Grid>

    </Grid>
</Window>
